{
  "name": "@bantr/lib",
  "version": "1.11.1",
  "description": "Shared types, functions, ... for Bantr",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm migration:run",
    "db:migrate:gen": "npm run typeorm migration:generate -- -d migrations",
    "postversion": "git push && git push --tags",
    "hasura": "hasura --project hasura --skip-update-check",
    "hasura:metadata:apply": "npm run hasura metadata apply --from-file",
    "hasura:metadata:export": "npm run hasura metadata export"
  },
  "author": "Catalysm",
  "license": "GPL-3.0",
  "dependencies": {
    "dotenv": "^8.2.0",
    "pg": "^8.0.3",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.7",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "faker": "^4.1.0",
    "hasura-cli": "^1.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}
